    time.sleep(0.025)

def random_loop_gen():
    random_loop = random.randint(1, 4)
    if random_loop == 1:
        standard_loop()
    elif random_loop == 2:
        v_loop()
    elif random_loop == 3:
        flashbang()
    elif random_loop == 4:
        all_on()

while True:
    random_loop()
